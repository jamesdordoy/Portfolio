{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": false,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": ["ESNext", "DOM"],
        "skipLibCheck": true,
        "types": ["vite/client", "node"],
        "allowJs": true,
        "baseUrl": ".",
        "paths": {
            "@ *": ["resources/js *"]
        }
    },
    "include": ["resources/**/*.ts", "resources/**/*.d.ts", "resources/**/*.vue"]
}
